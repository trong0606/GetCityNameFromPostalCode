<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <TextView
        android:textColor="@android:color/holo_red_light"
        android:textSize="20sp"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:text="MÀN HÌNH LẤY MÃ THÀNH PHỐ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <AutoCompleteTextView
        android:id="@+id/autotextviewtinh"
        android:hint="Tỉnh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <AutoCompleteTextView
        android:id="@+id/autotextviewhuyen"
        android:hint="Huyện"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#cc3333"/>
    <AutoCompleteTextView
        android:id="@+id/autotextviewxa"
        android:hint="Xã"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <AutoCompleteTextView
        android:id="@+id/autotextviewmahuyen"
        android:hint="Ma Huyen/Quan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/textviewcodecountry"
        android:textSize="30sp"
        android:gravity="center"
        android:text="This is Code Country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Button"
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>